<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="boundaries.AccountDashboardController" prefHeight="500.0" prefWidth="800.0">
   <top>
      <HBox spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
         <Label text="Welcome, Palesa Britany Leeto" textFill="WHITE">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <Region HBox.hgrow="ALWAYS" />
         <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" 
                text="Logout" textFill="WHITE" style="-fx-background-color: #e74c3c;" />
      </HBox>
   </top>
   
   <left>
      <VBox spacing="10.0" style="-fx-background-color: #34495e; -fx-padding: 15;" prefWidth="200">
         <Button fx:id="viewAccountsButton" mnemonicParsing="false" onAction="#handleViewAccounts" 
                prefWidth="170.0" text="My Accounts" />
         <Button fx:id="openAccountButton" mnemonicParsing="false" onAction="#handleOpenAccount" 
                prefWidth="170.0" text="Open New Account" />
         <Button fx:id="makeTransactionButton" mnemonicParsing="false" onAction="#handleMakeTransaction" 
                prefWidth="170.0" text="Make Transaction" />
         <Button fx:id="viewProfileButton" mnemonicParsing="false" onAction="#handleViewProfile" 
                prefWidth="170.0" text="My Profile" />
      </VBox>
   </left>
   
   <center>
      <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 20;">
         <Label text="Account Dashboard" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         
         <TableView fx:id="accountsTable" prefHeight="300.0" prefWidth="500.0">
            <columns>
               <TableColumn fx:id="accountNumberColumn" prefWidth="150.0" text="Account Number" />
               <TableColumn fx:id="accountTypeColumn" prefWidth="120.0" text="Account Type" />
               <TableColumn fx:id="balanceColumn" prefWidth="120.0" text="Balance (BWP)" />
               <TableColumn fx:id="branchColumn" prefWidth="110.0" text="Branch" />
            </columns>
         </TableView>
         
         <Label fx:id="totalBalanceLabel" text="Total Balance: BWP 0.00">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
      </VBox>
   </center>
</BorderPane>