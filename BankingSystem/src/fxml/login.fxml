<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="boundaries.LoginController" prefHeight="400.0" prefWidth="600.0">
   <center>
      <VBox alignment="CENTER" spacing="20.0">
         <Label text="Banking System Login" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         
         <GridPane hgap="10.0" vgap="15.0">
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            
            <Label text="Customer ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="customerIdField" promptText="Enter your customer ID" 
                      GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <PasswordField fx:id="passwordField" promptText="Enter your password" 
                          GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </GridPane>
         
         <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" 
                prefHeight="35.0" prefWidth="120.0" text="Login" />
         
         <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" 
                prefHeight="35.0" prefWidth="120.0" text="Register New Customer" />
      </VBox>
   </center>
   
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>