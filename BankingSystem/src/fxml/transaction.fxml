<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="boundaries.TransactionController" prefHeight="500.0" prefWidth="600.0">
   <center>
      <VBox alignment="CENTER" spacing="20.0">
         <Label text="Make Transaction" textAlignment="CENTER">
            <font><Font name="System Bold" size="24.0" /></font>
         </Label>
         
         <GridPane hgap="10.0" vgap="15.0">
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            
            <Label text="Account Number:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="accountNumberField" promptText="Enter account number" 
                      GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Transaction Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="transactionTypeComboBox" promptText="Select type" 
                     GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Amount (BWP):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="amountField" promptText="Enter amount" 
                      GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="descriptionField" promptText="Enter description" 
                      GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </GridPane>
         
         <HBox spacing="20.0">
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmit" 
                   prefHeight="35.0" prefWidth="120.0" text="Submit" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" 
                   prefHeight="35.0" prefWidth="120.0" text="Cancel" />
         </HBox>
      </VBox>
   </center>
   
   <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
</BorderPane>